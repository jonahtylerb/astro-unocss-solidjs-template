---
import Counter from '../components/Counter';
import Layout from '../layouts/Layout.astro';
import { Picture } from '@astrojs/image/components';
---

<Layout title='Astro Template'>
  <main class='bg-zinc-8 h-screen relative mix-tint-50:text-blue'>
    <Picture
      class='w-screen h-screen object-cover absolute inset-0'
      fit='cover'
      alt='a frog on a branch'
      src='/images/frog.jpg'
      sizes='(max-width: 1200px) 100vw, 1200px'
      widths={[400, 800, 1200]}
      aspectRatio='16:9'
    />
    <h1
      class='font-900 pos-9 w-full text-center text-4xl z-10 absolute -translate-1/2 vertical-mid left-1/2 top-25 text-shadow-lg'
    >
      Hello World!<span
        class='animate-wobble animate-count-infinite animate-duration-2000 i-tabler-hand-stop'
      ></span>
    </h1>
    <Counter client:load />
  </main>
</Layout>
